#!/bin/bash
# Claude Code - Credential Agent CLI
# Interact with the credential agent via Unix socket
#
# This CLI provides secure access to credentials without exposing them
# in environment variables or command-line arguments.

set -e

# Configuration
CRED_SOCKET="${CRED_AGENT_SOCKET:-/run/agent/cred.sock}"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m'

# Helper functions
print_error() {
    echo -e "${RED}Error: $1${NC}" >&2
}

print_success() {
    echo -e "${GREEN}$1${NC}"
}

print_info() {
    echo -e "${BLUE}$1${NC}"
}

# Check if socket exists
check_socket() {
    if [ ! -S "$CRED_SOCKET" ]; then
        print_error "Credential agent socket not found at ${CRED_SOCKET}"
        echo "Make sure the credential agent container is running."
        exit 1
    fi
}

# Send request to credential agent via socket
# Uses socat if available, falls back to Python
send_request() {
    local request="$1"

    if command -v socat &> /dev/null; then
        echo "$request" | socat -t5 - UNIX-CONNECT:"$CRED_SOCKET"
    elif command -v python3 &> /dev/null; then
        python3 -c "
import socket
import sys
import json

sock = socket.socket(socket.AF_UNIX, socket.SOCK_STREAM)
sock.settimeout(5)
sock.connect('$CRED_SOCKET')
sock.send('''$request'''.encode())
response = sock.recv(8192).decode()
sock.close()
print(response)
"
    elif command -v nc &> /dev/null; then
        # Note: nc may not support Unix sockets on all systems
        echo "$request" | nc -U "$CRED_SOCKET"
    else
        print_error "No socket client available (socat, python3, or nc required)"
        exit 1
    fi
}

# Parse JSON response
json_value() {
    local json="$1"
    local key="$2"
    if command -v jq &> /dev/null; then
        echo "$json" | jq -r ".$key // empty"
    else
        echo "$json" | grep -o "\"${key}\"[[:space:]]*:[[:space:]]*\"[^\"]*\"" | sed 's/.*: *"\([^"]*\)".*/\1/' | head -1
    fi
}

json_bool() {
    local json="$1"
    local key="$2"
    if command -v jq &> /dev/null; then
        echo "$json" | jq -r ".$key // false"
    else
        echo "$json" | grep -o "\"${key}\"[[:space:]]*:[[:space:]]*[a-z]*" | sed 's/.*: *//' | head -1
    fi
}

# Show help
show_help() {
    cat << EOF
${CYAN}Claude Code - Credential Agent CLI${NC}

Interact with the credential agent to securely access credentials.
Credentials are stored in locked memory and accessed via Unix socket.

${YELLOW}Usage:${NC}
  cred-cli <command> [options]

${YELLOW}Commands:${NC}
  list                  List available credentials (names only)
  get <tool>            Get a credential value (if policy allows)
  inject <tool>         Get environment injection format for a tool
  check <tool> [op]     Check if access is allowed for tool/operation
  health                Check credential agent health
  help                  Show this help

${YELLOW}Environment Variables:${NC}
  CRED_AGENT_SOCKET     Path to credential agent socket
                        (default: /run/agent/cred.sock)

${YELLOW}Examples:${NC}
  cred-cli list                    # List available credentials
  cred-cli get github              # Get GitHub token value
  cred-cli inject github           # Get env vars for git operations
  cred-cli check aws inject        # Check if AWS inject is allowed
  cred-cli health                  # Check agent status

${YELLOW}Security Notes:${NC}
  - Credentials are stored in locked memory (won't be swapped)
  - Access is verified via SO_PEERCRED (kernel-level UID check)
  - Policy file controls which operations are allowed
  - All access attempts are logged by the agent

${YELLOW}Using with Git:${NC}
  To use credentials with git commands, use the inject format:

  ${CYAN}# Get credentials as environment variables${NC}
  eval \$(cred-cli inject github | jq -r '.env | to_entries | .[] | "export \(.key)=\(.value)"')
  git push origin feature-branch

  ${CYAN}# Or use the secure-git wrapper${NC}
  secure-git push origin feature-branch
EOF
}

# List available credentials
cmd_list() {
    check_socket
    local response
    response=$(send_request '{"action": "list"}')

    if echo "$response" | grep -q '"error"'; then
        print_error "$(json_value "$response" "error")"
        exit 1
    fi

    if command -v jq &> /dev/null; then
        echo -e "${CYAN}Available credentials:${NC}"
        echo "$response" | jq -r '.credentials[]' | while read -r cred; do
            echo "  - $cred"
        done
    else
        echo "$response"
    fi
}

# Get a credential value
cmd_get() {
    local tool="$1"

    if [ -z "$tool" ]; then
        print_error "Tool name required"
        echo "Usage: cred-cli get <tool>"
        exit 1
    fi

    check_socket
    local response
    response=$(send_request "{\"action\": \"get\", \"tool\": \"$tool\"}")

    if echo "$response" | grep -q '"error"'; then
        print_error "$(json_value "$response" "error")"
        exit 1
    fi

    json_value "$response" "value"
}

# Get environment injection format
cmd_inject() {
    local tool="$1"

    if [ -z "$tool" ]; then
        print_error "Tool name required"
        echo "Usage: cred-cli inject <tool>"
        exit 1
    fi

    check_socket
    local response
    response=$(send_request "{\"action\": \"inject\", \"tool\": \"$tool\"}")

    if echo "$response" | grep -q '"error"'; then
        print_error "$(json_value "$response" "error")"
        exit 1
    fi

    echo "$response"
}

# Check if access is allowed
cmd_check() {
    local tool="$1"
    local operation="${2:-get}"

    if [ -z "$tool" ]; then
        print_error "Tool name required"
        echo "Usage: cred-cli check <tool> [operation]"
        exit 1
    fi

    check_socket
    local response
    response=$(send_request "{\"action\": \"check\", \"tool\": \"$tool\", \"operation\": \"$operation\"}")

    if command -v jq &> /dev/null; then
        local allowed reason
        allowed=$(echo "$response" | jq -r '.allowed')
        reason=$(echo "$response" | jq -r '.reason')

        echo -e "Tool: ${CYAN}${tool}${NC}"
        echo -e "Operation: ${operation}"
        echo

        if [ "$allowed" = "true" ]; then
            print_success "Access ALLOWED"
        else
            print_error "Access DENIED"
        fi
        echo "Reason: $reason"
    else
        echo "$response"
    fi
}

# Check agent health
cmd_health() {
    check_socket
    local response
    response=$(send_request '{"action": "health"}')

    if command -v jq &> /dev/null; then
        local status secrets
        status=$(echo "$response" | jq -r '.status')
        secrets=$(echo "$response" | jq -r '.secrets_loaded')

        if [ "$status" = "ok" ]; then
            print_success "Credential agent is healthy"
            echo "Credentials loaded: $secrets"
        else
            print_error "Credential agent unhealthy"
            echo "$response" | jq .
        fi
    else
        echo "$response"
    fi
}

# Main command handler
main() {
    case "${1:-help}" in
        list|ls)
            cmd_list
            ;;
        get)
            shift
            cmd_get "$@"
            ;;
        inject)
            shift
            cmd_inject "$@"
            ;;
        check)
            shift
            cmd_check "$@"
            ;;
        health|status)
            cmd_health
            ;;
        help|--help|-h)
            show_help
            ;;
        *)
            print_error "Unknown command: $1"
            echo "Run 'cred-cli help' for usage information"
            exit 1
            ;;
    esac
}

main "$@"
